<p>Add a new Client:</p>

<form action="/clients" method="post">
  <input id="stylistId" name="stylistId" type="hidden" value="$stylist.getId()">
  <label for="client">User:</label>
  <input id="client" name="client" type="text">
  <br>
  <label for="content">Client:</label>
  <textarea name="content" cols="140" rows="5" type="text" autocomplete="off"></textarea>
  <button type="submit" class="btn btn-default">Add client</button>
</form>
